{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "declaration": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "lib": [
            "ES2022",
            "DOM"
        ],
        "types": [
            "node",
            "bun-types"
        ]
    },
    "include": [
        "**/*.ts",
        ".github/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
